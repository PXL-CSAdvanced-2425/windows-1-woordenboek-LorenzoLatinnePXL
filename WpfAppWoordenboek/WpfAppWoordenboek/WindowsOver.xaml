<Window x:Class="WpfAppWoordenboek.WindowsOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppWoordenboek"
        mc:Ignorable="d"
        Title="WindowsOver" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Background="#FF8800FF">
            <Label Content="C#" FontSize="36" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Bahnschrift"/>
        </Grid>
        <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15">
            <Label x:Name="productNameLabel" Content="Productname: " FontSize="26" Margin="10"/>
            <Label x:Name="versionLabel" Content="Version: " FontSize="26" Margin="10"/>
            <Label x:Name="copyrightLabel" Content="Copyright: " FontSize="26" Margin="10"/>
            <Label x:Name="companyNameLabel" Content="Company Name: " FontSize="26" Margin="10"/>
            <Label x:Name="descriptionLabel" Content="Description: " FontSize="26" Margin="10"/>
        </StackPanel>
        


        <Button x:Name="closeButton" Grid.Column="1" Grid.Row="1" Margin="15" Width="120" Content="OK" Click="closeButton_Click"/>
    </Grid>
</Window>
